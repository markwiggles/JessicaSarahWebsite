<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "jessica_sarah" %></title>
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag "cyborg", :media => "all" %>

  <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>

</head>
<body class="<%= "#{params[:controller]} #{params[:action]}" %>">
<div class="container">
  <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == 'notice' ? 'success' : 'danger' %>">
        <a class="close" data-dismiss="alert">x</a>
        <%= msg %>
      </div>
  <% end %>
</div>


<div id="user-nav">
  <div class="container">
    <% if user_signed_in? %>
        <%= link_to 'Edit Profile', edit_user_registration_path %> |
        <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
        <p> Hello  <%= current_user.email %></p>
    <% else %>
        <%= link_to 'Register', new_user_registration_path %> |
        <%= link_to 'Login', new_user_session_path %>
    <% end %>
  </div>
</div>

<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-collapse collapse">
      <%= render_navigation(:context => :main, :expand_all => true, :renderer => :bootstrap) %>
    </div>
    <!--/.nav-collapse -->
  </div>
</div>

<% if @home %>
    <%= image_tag 'playButton.png', id: 'play-button', size: '100x100' %>
    <div class="video-container intro">
      <div id="outer">
        <div id="ytplayer"></div>
        <%= image_tag('close-x.png', id: 'intro-close') %>
      </div>
<% end %>

</div>


<div id="contact-links" class="container col-md-1">
  <%= link_to '<i id="font-test" class="fa fa-envelope fa-3x"></i>'.html_safe, 'contact', :remote => true %>
  <%= link_to '<i id="font-test" class="fa fa-twitter-square fa-3x"></i>'.html_safe, 'follow', :remote => true %>
  <%= link_to '<i id="font-test" class="fa fa-facebook fa-3x"></i>'.html_safe, 'follow', :remote => true %>
  <%= link_to '<i id="font-test" class="fa fa-youtube fa-3x"></i>'.html_safe, 'follow', :remote => true %>
  <%= link_to '<i id="font-test" class="fa fa-instagram fa-3x"></i>'.html_safe, 'follow', :remote => true %>
  <%= link_to '<i id="font-test" class="fa fa-tumbler fa-3x"></i>'.html_safe, 'follow', :remote => true %>
</div>

</div>


<div id="page-content" class="container theme-showcase">
  <%= yield %>

</div>
<!-- /container -->

<!-- Javascripts
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<%= javascript_include_tag "cyborg" %>
<%= yield(:page_javascript) if content_for?(:page_javascript) %>

<% if !@home %>
    <script>changeBGopacity('0.7')</script>
<% end %>

</body>
</html>

