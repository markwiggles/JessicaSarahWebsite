

<div class="admin-login col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-4">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true,:input_html => {:size => 30} %>
    <%= f.input :password, required: false,:input_html => {:size => 30}  %>
    <%= f.input_field :remember_me, as: :boolean, :inline_label => ' Remember me' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

  <br><br><br><br>

<%=
    render "devise/shared/links"
%>
</div>


