

<fieldset>
  <legend>Send a Message</legend>
<%= simple_form_for(@contact, :url => {:controller => 'follow', :action => 'create_contact'}, :remote => true) do |f|%>

    <%= f.input :message, placeholder: 'your message',as: :text, required: true, autofocus: true %>
    <%= f.input :name,  placeholder: 'your name', required: true %>
    <%= f.input :email, placeholder: 'you@here.com', required: true %>
    <br>
    <%= f.button :submit, 'Send Mail' %>


<% end %>
</fieldset>