<fieldset>
  <legend>messages, bookings etc</legend>
  <%= simple_form_for(@contact, :url => {:controller => 'follow', :action => 'create_contact'},
                      :html => {:honeypot => true}, remote: true) do |f| %>

      <%= f.input :message, placeholder: 'your message', label: false, as: :text, required: true, autofocus: true %>
      <%= f.input :name, placeholder: 'your name', label: false, required: true %>
      <%= f.input :email, placeholder: 'your email',label: false,  required: true %>

      <br>
      <%= f.button :submit, 'Send Mail', :class => 'btn-block', data: { :disable_with => 'Please wait...'} %>

      <%= image_tag('close-x.png', id: 'message-close', class: 'close-x', size: '30x30') %>

  <% end %>
</fieldset>